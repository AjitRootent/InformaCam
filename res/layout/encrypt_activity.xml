<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/OverlayActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout style="@style/H1Holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	<org.witness.mods.InformaHeaderTextView style="@style/H1"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/apg_encrypting_title" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:weightSum="1.0">
	    <org.witness.mods.InformaTextView style="@style/P"
	   		android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.75"
	    	android:layout_margin="6dip"
	    	android:id="@+id/encrypting_progress" />
	    <ProgressBar
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.25" />
	</LinearLayout>
	
</LinearLayout>