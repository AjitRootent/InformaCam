<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/OverlayActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:weightSum="1.0" >
    <LinearLayout style="@style/H1Holder"
        android:layout_height="0dip"
        android:layout_width="match_parent"
    	android:layout_weight="0.2">
    	<org.witness.mods.InformaHeaderTextView style="@style/H1"
        	android:text="@string/chooser_prompt"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent" />
        
    </LinearLayout>
   	<ListView style="@style/OverlayActivity"
   	    android:layout_width="fill_parent"
   	    android:layout_height="0dip"
   	    android:layout_weight="0.7"
   	    android:id="@+id/keyChooser" /> 
    <org.witness.mods.InformaButton style="@style/Button_standard"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:id="@+id/keyChooser_ok"
        android:text="@string/ok" />
</LinearLayout>