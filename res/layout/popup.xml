<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    android:id="@+id/popupTracks"
    >
    <ImageButton
    	android:id="@+id/uiPopupEditTag"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/uiedittag"
    	android:background="@drawable/transpxl"
    />
    <ImageButton
    	android:id="@+id/uiPopupIDTag"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/uiidtag"
		android:background="@drawable/transpxl"
    />
    <ImageButton
    	android:id="@+id/uiPopupBlurTag"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/uiblurtag"
    	android:background="@drawable/transpxl"
    />
    <ImageButton
    	android:id="@+id/uiPopupImagePrefs"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/uiimageprefs"
    	android:background="@drawable/transpxl"
    />
</LinearLayout>