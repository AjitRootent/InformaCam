<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/NavHolder"
        android:id="@+id/navigation_holder">

        <ImageButton
            android:id="@+id/navigation_button"
            style="@style/NavButton_standard"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/navigation_label"
            style="@style/NavH1"
            android:text="@string/address_book" />
    </LinearLayout>

    <ListView
        android:id="@+id/address_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_below="@+id/navigation_holder"
        android:layout_above="@+id/select_contact_button" />
    
    <Button style="@style/Button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_contact_button"
        android:layout_alignParentBottom="true"
        android:text="@string/ok" />

</RelativeLayout>