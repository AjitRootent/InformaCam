<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/OverlayActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        style="@style/H1Holder"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.15" >

        <org.witness.informacam.app.mods.InformaHeaderTextView
            android:id="@+id/choice_title"
            style="@style/H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.85"
        android:orientation="vertical"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="10dip" >

        <ListView
            android:id="@+id/choice_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:padding="0dip" />

        <org.witness.informacam.app.mods.InformaButton
            android:id="@+id/choice_submit"
            style="@style/Button_standard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>